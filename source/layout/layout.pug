doctype html
html(lang='ru', dir='ltr')
  head
    block head
      include head.pug
      link(href="https://fonts.googleapis.com/css?family=Roboto:100,400,700&display=swap", rel="stylesheet")
  body
    block header
      include ../components/BaseHeader/BaseHeader.pug
      include ../components/BaseMenu/BaseMenu.pug
      .menu 
        .menu__headline
          h2.menu__title наша строительная компания
          img.js-toggleMenu.menu__image(src="/content/close.png" alt="menu close")
        +menu({
          name: 'Проекты',
          link: '#projects',
        })
        +menu({
          name: 'Ваши предложения',
          link: '#toSend',
        })
        +menu({
          name: 'Чем мы занимаемся?',
          link: '#work',
        })
        +menu({
          name: 'Галерея',
          link: '#slider',
        })
        +menu({
          name: 'Ответы на вопросы',
          link: '#answers',
        })
        +menu({
          name: 'Наши партнеры',
          link: '#partners',
        })
        +menu({
          name: 'Отзывы',
          link: '#comments',
        })
        +menu({
          name: 'Обратная связь',
          link: '#feedback',
        })
        +menu({
          name: 'Контакты',
          link: '#contacts',
        })

    block body
    block footer
      include ../components/BaseFooter/BaseFooter.pug

    block script
      script(src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous")
